<UserControl x:Class="TCC.Controls.EdgeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <Style x:Key="Cont" TargetType="UniformGrid">
            <Setter Property="Margin" Value="6,0"/>
        </Style>
        <SkewTransform AngleX="30" x:Key="Transform"></SkewTransform>

    </UserControl.Resources>
    <Grid Margin="0" x:Name="Root" Width="Auto">
        <Border Style="{StaticResource Styles.DefaultBorder}"
                Height="26" 
                Visibility="Hidden"
                CornerRadius="0,13,0,0" 
                x:Name="BaseBorder" >
        </Border>
        <Border Width="Auto"
                Height="16"
                CornerRadius="0"
                x:Name="MaxBorder"
                Background="Red"
                Margin="11 0"
                Opacity="0"
                RenderTransform="{StaticResource Transform}">
            <Border.Effect>
                <DropShadowEffect Color="Red" ShadowDepth="0" BlurRadius="20" />
            </Border.Effect>
        </Border>
        <UniformGrid Width="Auto" 
                     Height="Auto" 
                     Rows="1" 
                     Columns="10" 
                     Opacity="1" 
                     Style="{StaticResource Cont}">
            <UniformGrid.Resources>
                <Style TargetType="Rectangle">
                    <Setter Property="Fill" Value="#1fff"></Setter>
                    <Setter Property="Stroke" Value="#2fff"></Setter>
                    <Setter Property="StrokeThickness" Value="1"></Setter>
                    <Setter Property="Height" Value="16"></Setter>
                    <Setter Property="Width" Value="20"></Setter>
                    <Setter Property="RenderTransform" Value="{StaticResource Transform}"></Setter>
                </Style>
            </UniformGrid.Resources>
            <Rectangle />
            <Rectangle />
            <Rectangle />
            <Rectangle />
            <Rectangle />
            <Rectangle />
            <Rectangle />
            <Rectangle />
            <Rectangle />
            <Rectangle />
        </UniformGrid>
        <UniformGrid Width="Auto" 
                     Height="Auto" 
                     Rows="1" 
                     Columns="10" 
                     Opacity="1" 
                     x:Name="EdgeContainer"
                     Style="{StaticResource Cont}">
            <UniformGrid.Resources>
                <Style TargetType="Rectangle">
                    <Setter Property="Fill" Value="#1fff"></Setter>
                    <Setter Property="Height" Value="16"></Setter>
                    <Setter Property="Width" Value="20"></Setter>
                    <Setter Property="RenderTransform" Value="{StaticResource Transform}"></Setter>
                    <Setter Property="Opacity" Value="0"></Setter>
                </Style>
            </UniformGrid.Resources>
            <Rectangle Fill="OrangeRed" />
            <Rectangle Fill="OrangeRed"/>
            <Rectangle Fill="DarkOrange"/>
            <Rectangle Fill="DarkOrange"/>
            <Rectangle Fill="DarkOrange"/>
            <Rectangle Fill="DarkOrange"/>
            <Rectangle Fill="DarkOrange"/>
            <Rectangle Fill="DarkOrange"/>
            <Rectangle Fill="Orange"/>
            <Rectangle Fill="Orange" />

        </UniformGrid>
        <UniformGrid Width="Auto" 
                     Height="Auto" 
                     Rows="1" 
                     Columns="10" 
                     Opacity="1" 
                     Style="{StaticResource Cont}">
            <UniformGrid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#fff"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property="Margin" Value="4 0 -5 0"></Setter>
                </Style>
            </UniformGrid.Resources>
            <TextBlock Text="1" />
            <TextBlock Text="2"/>
            <TextBlock Text="3"/>
            <TextBlock Text="4"/>
            <TextBlock Text="5"/>
            <TextBlock Text="6"/>
            <TextBlock Text="7"/>
            <TextBlock Text="8"/>
            <TextBlock Text="9"/>
            <TextBlock Text="10" />

        </UniformGrid>
    </Grid>

</UserControl>
