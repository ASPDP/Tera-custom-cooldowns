<UserControl x:Class="TCC.Controls.ChatMessageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:TCC.Converters"
             xmlns:local="clr-namespace:TCC.Controls"
             xmlns:ts="clr-namespace:TCC.TemplateSelectors"
             xmlns:windows="clr-namespace:TCC.Windows"
             xmlns:vm ="clr-namespace:TCC.ViewModels"
             mc:Ignorable="d" 
             >
    <Grid Width="Auto" MinWidth="0" Margin="0,0,0,0" VerticalAlignment="Stretch" Height="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--Background -->
        <Border Background="{Binding ContainsPlayerName, Converter={StaticResource mentionConv}}" 
                            Opacity=".4" 
                            CornerRadius="3" 
                            Visibility="Visible"
                            Margin="0,0" 
                            Grid.ColumnSpan="5"
                            Grid.Column="0"
                            VerticalAlignment="Stretch"/>
        <!--Background tip-->
        <Border Width="4" Background="{Binding ContainsPlayerName,Converter={StaticResource mentionConv}}" Grid.Column="4" 
                            CornerRadius="0,3,3,0" Margin="0,0" />
        <Border Width="4" Background="#999" Grid.Column="4" Opacity="{Binding IsContracted, Converter={StaticResource boolToOpacity}}"
                            CornerRadius="0,3,3,0" Margin="0,0"/>
        <!--Author-->
        <ContentControl ContentTemplateSelector="{StaticResource AuthorTemplateSelector}" 
                        Content="{Binding}"
                        Margin="3,1,3,1"
                        Grid.Column="2"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Width="Auto"  
                        PreviewMouseLeftButtonDown="OutlinedTextBlock_PreviewMouseLeftButtonDown"
/>
        <!--Channel-->
        <ContentControl ContentTemplateSelector="{StaticResource ChannelLabelTemplateSelector}" 
                        Content="{Binding}"
                        Width="36"   
                        Margin="2,4,0,0"
                        Grid.Column="1"
                        Visibility="{Binding ShowChannel, Converter={StaticResource boolToVisibleCollapsed}}"
                        />
        <!--Timestamp-->
        <TextBlock  Margin="4,1,2,0" Foreground="{Binding Channel, Converter={StaticResource ChatColorConverter}}" 
                    Width="Auto"   
                    Opacity=".8" 
                    FontWeight="Normal" 
                    FontSize="11"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Text="{Binding Timestamp}"
                    Grid.Column="0"
                        Visibility="{Binding ShowTimestamp, Converter={StaticResource boolToVisibleCollapsed}}"
                    
                    />
    </Grid>
</UserControl>
