<UserControl x:Class="TCC.Controls.ChatMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCC.Controls"
             xmlns:ts="clr-namespace:TCC.TemplateSelectors"
             xmlns:c="clr-namespace:TCC.Converters"
             mc:Ignorable="d" >
    <Grid Margin="2,1">
        <Grid.Resources>
            <DataTemplate x:Key="MessageHeaderTemplate">
                <local:ChatMessageHeader />
            </DataTemplate>
            <DataTemplate x:Key="MessageBodyTemplate">
                <local:MessagePieceControl />
            </DataTemplate>
        </Grid.Resources>

        <Grid Width="Auto" MinWidth="0" Margin="0,0" VerticalAlignment="Top" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!--Header-->
            <ContentControl Content="{Binding}" 
                            ContentTemplate="{StaticResource MessageHeaderTemplate}"/>
            <!--Message-->
            <ItemsControl ItemsSource="{Binding Pieces}"
                          ItemTemplate="{StaticResource MessageBodyTemplate}" 
                          Width="500"
                          Grid.Column="6" 
                          Margin="0,4,0,4" 
                          VerticalAlignment="Top" 
                          HorizontalAlignment="Left">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
