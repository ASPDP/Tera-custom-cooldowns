<UserControl x:Class="TCC.Controls.WarriorBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TCC.Controls"
             xmlns:sys="clr-namespace:System;assembly=System"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid Width="Auto" Margin="20" Name="root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Center" Margin="0,0,0,-6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource border}"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.RowSpan="3"
                    CornerRadius="0,0,0,0"
                    Margin="0,0,0,0"
                    VerticalAlignment="Stretch"/>

            <!--HP/MP-->
            <UniformGrid Columns="3" 
                         HorizontalAlignment="Stretch" 
                         Margin="5,0,7,0"
                         Grid.RowSpan="1"
                         Grid.Column="1"
                         Grid.Row="1"
                         >
                <local:StatControl DataContext="{Binding HP}" Color="{StaticResource hpColor}" Width="80" />
                <local:StatControl DataContext="{Binding MP}" Color="{StaticResource mpColor}" Width="80"/>
                <local:StatControl DataContext="{Binding ST}" Color="#5ff" Width="80"/>
            </UniformGrid>

            <!--Edge-->
            <local:EdgeControl x:Name="edgeBar" 
                               DataContext="{Binding EdgeCounter}" 
                               Grid.Column="1" 
                               Grid.RowSpan="1"
                               Width="270" 
                               VerticalAlignment="Center"
                               />

            <Grid Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <local:WarriorStanceIndicator Grid.RowSpan="2"
                                       Margin="1"
                                       DataContext="{Binding Stance}"/>
                <!--Gamble-->
                <local:BuffCooldownControl DataContext="{Binding DeadlyGamble}" 
                                               Grid.Column="1" 
                                               Grid.RowSpan="10"/>
            </Grid>
        </Grid>

        <!--Skills grids-->
            <local:FixedSkillContainers x:Name="sk" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Center" Margin="0,5,0,0"/>

        </Grid>
</UserControl>
