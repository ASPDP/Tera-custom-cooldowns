<UserControl x:Class="TCC.Controls.WarriorBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TCC.Controls"
             xmlns:sys="clr-namespace:System;assembly=System"
             mc:Ignorable="d" Loaded="UserControl_Loaded">
    <Grid Width="Auto" Margin="20" Name="root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--HP/MP-->
        <Grid HorizontalAlignment="Center" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid UseLayoutRounding="True">
                <Border Background="{StaticResource hpColor}" 
                        Grid.Column="0"  
                        CornerRadius="10,0,0,10" 
                        Margin="4.5,0,-15,0" 
                        Style="{StaticResource ClassWindowStatBorder}" >
                    <TextBlock Name="hpText" 
                               Style="{StaticResource text1}" 
                               FontSize="14" 
                               Margin="0,0" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Text="{Binding HP.Val}" />
                </Border>
            </Grid>
            
            <Border Background="{StaticResource mpColor}" 
                    Grid.Column="2"  
                    Margin="-15,0,4,0" 
                    CornerRadius="0,10,10,0" 
                    Style="{StaticResource ClassWindowStatBorder}" >
                <TextBlock Name="mpText" 
                           Style="{StaticResource text1}" 
                           Grid.Column="2" 
                           FontSize="14" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Text="{Binding MP.Val}"/>
            </Border>

            <Border Background="#5ff" 
                    Grid.Column="1" 
                    Margin="0,-10,0,0" 
                    CornerRadius="0,0,40,40" 
                    Grid.Row="1" 
                    Style="{StaticResource ClassWindowStatBorder}" >
                <TextBlock Name="reText" 
                           Style="{StaticResource text1}" 
                           Foreground="#f222" 
                           Grid.Column="1" 
                           Grid.Row="1" 
                           FontSize="13" 
                           VerticalAlignment="Bottom" 
                           HorizontalAlignment="Center" 
                           Text="{Binding ST.Val}"/>
            </Border>
            
            <!--Edge-->
            <local:EdgeControl x:Name="edgeBar" DataContext="{Binding EdgeCounter}" Grid.Column="1" Width="270" />
        </Grid>
        
        <!--Skills grids-->
        <local:FixedSkillContainers x:Name="sk" Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Center" Margin="0,0,0,0"/>
        
        <!--Bar cooldowns-->
        <local:BarCooldown VerticalAlignment="Top" HorizontalAlignment="Stretch" DataContext="{Binding DeadlyGamble}" Grid.Row="2" Color="DimGray" Height="22" Margin="5,-2,5,0"  Grid.RowSpan="2" x:Name="gambleCD" />
        <local:BarCooldown VerticalAlignment="Top" HorizontalAlignment="Stretch" DataContext="{Binding DeadlyGambleBuff}" Grid.Row="2" Color="Orange" Height="22" Margin="5,-2,5,0"  Grid.RowSpan="2" x:Name="gambleBuff"/>
    </Grid>
</UserControl>
