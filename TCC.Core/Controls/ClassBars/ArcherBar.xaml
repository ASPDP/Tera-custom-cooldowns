<UserControl x:Class="TCC.Controls.ArcherBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCC.Controls"
             mc:Ignorable="d"  Loaded="UserControl_Loaded"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="Auto" Margin="0" Name="root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--HP/MP-->
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Style="{StaticResource Styles.DefaultBorder}"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.RowSpan="3"
                    CornerRadius="0,0,0,0"
                    Margin="0"
                    VerticalAlignment="Stretch"/>
            <!--HP/MP-->
            <UniformGrid Columns="1" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Center"
                         Margin="5,3"
                         Grid.ColumnSpan="1"
                         Grid.Column="3"
                         Grid.Row="0"
                         >
                <local:StatControl DataContext="{Binding HP}" Color="{StaticResource Colors.App.HP}" StatusColor="{StaticResource Colors.App.MP}" Width="85" Margin="3,3,3,3"/>
                <local:StatControl DataContext="{Binding MP}" Color="{StaticResource Colors.App.MP}" Width="85" Margin="3,3,3,3"/>
            </UniformGrid>
            <local:ArcherStanceIndicator Grid.RowSpan="2"
                                         Margin="1,1"
                                         DataContext="{Binding Stance}" />

            <UniformGrid Grid.Column="1" Rows="1" Margin="5,0,0,0">
                

            <local:ArcherFocusControl x:Name="focusControl" 
                                      Margin="-5,-1,0,0" Padding="5,0"
                                      DataContext="{Binding Focus}" 
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

            <local:FixedSkillControl x:Name="thunderbolt"
                                     DataContext="{Binding Thunderbolt}"
                                     HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-10,-10,-10,-10" Padding="10"/>
            </UniformGrid>
        </Grid>
    </Grid>
</UserControl>
