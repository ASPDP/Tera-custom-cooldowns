<w:TccWindow x:Class="TCC.CooldownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCC"
        xmlns:vm="clr-namespace:TCC.ViewModels"
        xmlns:w="clr-namespace:TCC.Windows"
             xmlns:controls="clr-namespace:TCC.Controls"
        mc:Ignorable="d"
        Title="Tera Custom Cooldowns"
        Height="Auto" 
        Width="Auto" 
        SizeToContent="WidthAndHeight" 
        Topmost="True" 
        AllowsTransparency="True" 
        ShowInTaskbar="False" 
        WindowStyle="None" 
        Background="Transparent" 
        Loaded="TccWindow_Loaded"    
        ResizeMode="NoResize">
    <w:TccWindow.DataContext>
        <vm:CooldownWindowViewModel />
    </w:TccWindow.DataContext>
    <Grid Background="Transparent" >
        <ContentControl x:Name="controlContainer" 
                        Margin="10" 
                        DataContext="{Binding Instance}" 
                        Content="{Binding}"
                        ContentTemplate="{Binding Instance.Mode, Converter={StaticResource Converters.CooldowWindowModeToTemplate}}" />
        <w:WindowButtons Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0" WindowName="Cooldown bar"
                         x:Name="buttons" Margin="0" Visibility="Visible"
                         DataContext="{Binding WindowSettings, RelativeSource={RelativeSource AncestorType=w:TccWindow}}"
                         />
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="{Binding Scale}" 
                            ScaleY="{Binding Scale}"/>
        </Grid.LayoutTransform>
    </Grid>
</w:TccWindow>
