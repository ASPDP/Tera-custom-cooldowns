<UserControl x:Class="TCC.EdgeArc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.Resources>
            <Style x:Key="arc" TargetType="local:Arc">
                <Setter Property="StrokeThickness" Value="4"/>
                <Setter Property="StartAngle" Value="0"/>
                <Setter Property="EndAngle" Value="0"/>
            </Style>
        </Grid.Resources>
        <local:Arc x:Name="arc" Stroke="White" RenderTransformOrigin="0.5,0.5" Style="{StaticResource arc}" />


    </Grid>
</UserControl>
