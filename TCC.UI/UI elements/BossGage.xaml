<UserControl x:Class="TCC.BossGage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCC"
             xmlns:controls="clr-namespace:TCC.UI_elements"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             >
    <UserControl.Resources>
        <DataTemplate x:Key="BossBuffDataTemplate">
            <controls:AbnormalityIndicator AbnormalityId="{Binding Buff.Id}"
                                           AbnormalityName="{Binding Buff.Name}"
                                           Icon="{Binding Buff.IconBrush}"
                                           Duration="{Binding Duration}"
                                           BossId="{Binding Target}"/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Width="Auto">
        <Grid Width="Auto" Height="Auto" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Margin="0,0,0,0" CornerRadius="2" Height="Auto" Width="Auto" BorderThickness="2" BorderBrush="#30ffffff" Background="#bf202030"  Grid.RowSpan="3" Grid.Row="0" >
                <!--<Border.Effect>
                    <DropShadowEffect Opacity="0.6" ShadowDepth="3"/>
                </Border.Effect>-->
            </Border>
            <Grid Margin="20,6">
                <TextBlock Name="BossNameTB" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Foreground="White" Text="{Binding BossName}" >
                    <!--<TextBlock.CacheMode>
                        <BitmapCache RenderAtScale="1.5"></BitmapCache>
                    </TextBlock.CacheMode>--></TextBlock>
                <TextBlock Name="Perc2" HorizontalAlignment="Right" Foreground="White" VerticalAlignment="Center" FontSize="13">-
                    <!--<TextBlock.CacheMode>
                        <BitmapCache RenderAtScale="1.5"></BitmapCache>
                    </TextBlock.CacheMode>--></TextBlock>
                <TextBlock Name="Perc" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="0" FontSize="16">100%
                    <!--<TextBlock.CacheMode>
                        <BitmapCache RenderAtScale="1.5"></BitmapCache>
                    </TextBlock.CacheMode>--></TextBlock>
            </Grid>

            <Grid Grid.Row="1" Margin="20,0,20,6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Rectangle Name="BaseRect"  Fill="#90000000" Height="5" Width="600" HorizontalAlignment="Stretch"/>
                <Rectangle Name="HPrect" Fill="#4a82bd" Width="600" Height="{Binding ElementName=BaseRect, Path=Height}" HorizontalAlignment="Left" >
                    <Rectangle.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="Red" Opacity="0"/>
                    </Rectangle.Effect>
                </Rectangle>
                <Grid Height="{Binding ElementName=BaseRect, Path=Height}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="1,0,1,0" BorderBrush="#90ffffff" Grid.Column="1"></Border>
                    <Border BorderThickness="1,0,1,0" BorderBrush="#90ffffff" Grid.Column="3"></Border>
                    <Border BorderThickness="1,0,1,0" BorderBrush="#90ffffff" Grid.Column="5"></Border>
                    <Border BorderThickness="1,0,1,0" BorderBrush="#90ffffff" Grid.Column="7"></Border>
                    <Border BorderThickness="1,0,1,0" BorderBrush="#90ffffff" Grid.Column="9"></Border>
                </Grid>
                <StackPanel Width="Auto" Height="Auto" Name="NextEnrage" Margin="-15,0,0,0" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" Grid.Row="2">
                        <StackPanel.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="600"/>
                            </TransformGroup>
                        </StackPanel.RenderTransform>
                        <Polygon Points="0,10 8,0 16,10"  Margin="0,0,0,0"  Fill="Orange" VerticalAlignment="Center" Height="10"  HorizontalAlignment="Center" Grid.Column="1" >
                        </Polygon>
                                <TextBlock Width="30" Text="100" Name="NextEnrageTB" FontSize="13" Foreground="White" TextAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" Padding="0">
                                <!--<TextBlock.CacheMode>
                                    <BitmapCache RenderAtScale="2"/>
                                </TextBlock.CacheMode>-->
                            </TextBlock>
                    </StackPanel>
            </Grid>

            <Grid Name="EnrageGrid" Grid.Column="1" Grid.RowSpan="3" Width="0" Height="60" Margin="5,0">

                <Border Margin="0,0,0,0" CornerRadius="2" Height="Auto" Width="Auto" BorderThickness="0" BorderBrush="#70ffffff" Background="#202020"  Grid.Column="1" Grid.RowSpan="3" Grid.Row="0" >
                    <Border.Effect>
                        <DropShadowEffect Opacity="0.6" ShadowDepth="3"/>
                    </Border.Effect>
                </Border>
                <Ellipse Margin="8" Width="Auto" Height="Auto">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/resources/enraged.png">
                            <ImageBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                    <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                    <RotateTransform CenterY="0.5" CenterX="0.5"/>
                                    <TranslateTransform X="0.01"/>
                                </TransformGroup>
                            </ImageBrush.RelativeTransform>
                            <ImageBrush.Transform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ImageBrush.Transform>
                        </ImageBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <local:Arc x:Name="EnrageArc" Margin="5" Width="Auto" Height="Auto" Stroke="White" StrokeThickness="3"></local:Arc>
                <Grid Width="20" Height="20" x:Name="g" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="35,30,0,0">

                    <Ellipse x:Name="fill" Fill="White"  Opacity="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stroke="#40000000"/>
                    <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                        <TextBlock Foreground="#d9000000" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   TextAlignment="Center"
                   FontWeight="Normal" 
                   FontSize="16" 
                   x:Name="number" 
                   FontFamily="Roboto Mono" 
                   FontStyle="Normal"
                   Opacity="1" 
                   Margin="3"
                   Text="35">
            <!--<TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="0" Color="White"></DropShadowEffect>
            </TextBlock.Effect>-->
                        </TextBlock>
                    </Viewbox>

                </Grid>

            </Grid>
            <Grid Grid.Row="4" Height="Auto" Margin="0,5" HorizontalAlignment="Left">
                <Border Margin="0,0,0,0" CornerRadius="2" Height="Auto" Width="Auto" BorderThickness="2" BorderBrush="#30ffffff" Background="#bf202030"  Grid.RowSpan="3" Grid.Row="0" >
                    <!--<Border.Effect>
                    <DropShadowEffect Opacity="0.6" ShadowDepth="3"/>
                </Border.Effect>-->
                </Border>
                <ItemsControl Name="Abnormalities" ItemTemplate="{StaticResource BossBuffDataTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
